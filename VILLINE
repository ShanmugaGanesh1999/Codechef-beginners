#include <stdio.h>

int main(void) {
	// your code goes here
	int N; 
	int m,c;
	scanf("%d",&N);
	scanf("%d%d",&m,&c);
	int p1=0,p2=0;
    int i;
    for(i=1;i<=N;i++)
    {
    	int x,y,p;
    	  scanf("%d%d%d",&x,&y,&p);
    	if(y>(m*x+c))
		   p1=p1+p;
		else
		   p2=p2+p;
		
	}
	if(p1>p2)
	   printf("%d",p1);
	   
    else
       printf("%d",p2);
}

