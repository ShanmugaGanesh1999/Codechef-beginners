#include<stdio.h>

int main(void)
{
    int t, n ,i , x , y;
    int result;
    scanf("%d",&t);
    while(t--)
    {
        scanf("%d",&n);
        result = 0;
        for (i=1;i<=n;i++)
        {
            scanf("%d %d", &x , &y);
            result=result^i; // that's the joke
        }
        printf("%d\n", result);
    }
return 0;
}
