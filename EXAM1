#include <stdio.h>
int main ()
{
    int key,p,n,i,j,length,score;


    scanf ("%d",&key);
    for (p=1;p<=key;p++){
            score=0;

         scanf ("%d",&length);
         char str1[length+1],str2[length+1];

        scanf ("%s",str1);


        scanf ("%s",str2);

        for (i=0;i<length;i++){
             if (str2[i]=='N'){
                continue;
        }
                else if (str1[i]==str2[i]){
                    score=score+1;
                }
                else
                    i++;
                    continue;
            }




    printf ("%d\n",score);
    }
    return 0;
}



